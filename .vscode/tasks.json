{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "python task",
            "type": "shell",
			"options": {
				"cwd": "${fileDirname}"
			},
            "command": "python",
            "args": [
                "${fileBasenameNoExtension}.py",
				">",
                "${fileBasenameNoExtension}.txt",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "python mpirun4",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "mpiexec",
            "args": [
                "-np",
                "4",
                "python",
                "${fileDirname}\\${fileBasenameNoExtension}.py",
				">",
                "${fileBasenameNoExtension}.txt",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
	]
}